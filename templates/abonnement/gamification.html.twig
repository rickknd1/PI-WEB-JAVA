{% extends "home/home.html.twig" %}

{% block gamidetail %}
<!-- product image preview-->
    <br>
<!-- product details -->
<div class="flex-1 space-y-8">

    <div class="md:space-y-5 space-y-3 p-5 max-md:pt-0 md:pr-2">

        <div>
            <h3 class="text-lg font-semibold"> {{ gamifications.nom }} </h3>
            <p class="text-xs mt-2 font-light text-gray-900 dark:text-white"> {{ gamifications.typeAbonnement.nom }}</p>
        </div>

        <h1 class="text-2xl font-semibold"> {{ gamifications.conditionGamification }} Points</h1>

        <div>
            <div class="grid grid-cols-2 gap-2 mt-2 text-sm">
                <div>  Status </div>
                {% if user.points >=  gamifications.conditionGamification%}
                    <div class="text-teal-600">  Available </div>
                {% else %}
                    <div class="text-red-600">  Not Available </div>
                {% endif %}
            </div>
        </div>

        <div class="flex gap-2 py-2">
            {% if user.points >=  gamifications.conditionGamification%}
                <button class="button bg-primary text-white flex-1 py-1"><a href="{{ path('gamification.active', {point:gamifications.conditionGamification})}}">Active</a></button>
            {% else %}
                <button class="button bg-secondary text-white flex-1 py-1">Active</button>
            {% endif %}
        </div>

        <p class="text-sm text-black font-light dark:text-white"> {{ gamifications.description }}</p>

    </div>

</div>
{% endblock %}