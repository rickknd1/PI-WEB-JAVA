{% extends "base.html.twig" %}

{% block title %}{{ cat.nom }}{% endblock title %}

{% block  body %}
    <script>
        document.documentElement.classList.add('dark');
    </script>
    <h1>
        {{ cat.nom }}
    </h1>
    <img class="w-[300px]" src="{{ cat.cover}}">
    <ul class="mt-2">
        <li>
            {{ cat.description}}
        </li>
        <li>
            <h4>{{ cat.dateCreation|date('d-m-Y') }}</h4>
        </li>
    </ul>
{% endblock  body %}