{% extends 'base.html.twig' %}

{% block title %}Supprimer la ville{% endblock %}

{% block body %}
    <h1>Supprimer la ville</h1>

    <p>Êtes-vous sûr de vouloir supprimer cette ville ?</p>

    <form method="post" action="{{ path('ville_delete', {'id': ville.id}) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ville.id) }}">
        <button class="btn btn-danger">Supprimer</button>
    </form>

    <a href="{{ path('ville_index') }}" class="btn btn-secondary">Annuler</a>
{% endblock %}