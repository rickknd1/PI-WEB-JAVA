{% extends "admin.html.twig" %}

{% block  villeAdmin %}
    <div class="main-panel">

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="{% if app.request.attributes.get('_route') starts with 'ville_edit' %}col-md-10{% else %}col-md-7{% endif %}">

                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">{% block titleVille %}{% endblock %}</div>
                                <p class="card-category">{% block nbrVille %}{% endblock %}</p>
                            </div>
                            <div class="card-body">
                                {% block  villeEdit %}{% endblock %}
                                {% block ville %}{% endblock %}
                            </div>
                        </div>
                    </div>
                    {% if app.request.attributes.get('_route') == 'ville_index' %}
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Add Ville</h4>
                                </div>
                                <div class="card-body">
                                    {% block addVille %}{% endblock %}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}