{% extends 'home/home.html.twig' %}

{% block title %}Liste des villes{% endblock %}

{% block ville %}

<div class="relative overflow-x-auto">
    <table class="table table-head-bg-primary mt-4">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col" class="col-4">Description</th>
                <th scope="col" class="col-2">Position</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for ville in villes %}
                <tr>
                    <td>{{ ville.id }}</td>
                    <td>{{ ville.nom }}</td>
                    <td>{{ ville.description }}</td>
                    <td>{{ ville.position }}</td>
                    <td>
                        <a href="{{ path('ville_show_front', {id: ville.id}) }}" class="btn btn-link" data-toggle="tooltip" title="Voir">
                            <i class="la la-eye">Voir</i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
