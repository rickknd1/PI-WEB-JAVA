<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.syncylinky.controllers.PostCardController"
      style="-fx-background-color: #2C3E50; -fx-background-radius: 10px; -fx-padding: 10px;"
      spacing="5"
      prefWidth="500">
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label fx:id="authorLabel" text="Author"
               style="-fx-text-fill: #FFFFFF; -fx-font-weight: bold; -fx-font-size: 14px;"/>
        <Label fx:id="timestampLabel" text="Timestamp"
               style="-fx-text-fill: #D3D3D3; -fx-font-size: 12px;"/>
    </HBox>
    <Text fx:id="contentText" text="Content"
          style="-fx-fill: #FFFFFF; -fx-font-size: 14px;"
          wrappingWidth="480"/>
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Button fx:id="likeButton" text="Like (0)"
                onAction="#handleLike"
                style="-fx-background-color: transparent; -fx-text-fill: #00CED1;"/>
        <Button fx:id="commentButton" text="Comment (0)"
                onAction="#handleComment"
                style="-fx-background-color: transparent; -fx-text-fill: #00CED1;"/>
        <Button fx:id="shareButton" text="Share (0)"
                onAction="#handleShare"
                style="-fx-background-color: transparent; -fx-text-fill: #00CED1;"/>
    </HBox>
</VBox>