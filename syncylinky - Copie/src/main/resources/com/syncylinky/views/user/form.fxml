<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.util.Callback?>
<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.syncylinky.controllers.UserFormController"
      spacing="10" style="-fx-padding: 20px;">

    <Label text="User Form" styleClass="form-title" />

    <GridPane styleClass="form-container" hgap="15" vgap="15">
        <Label text="Email:" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="emailField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Password:" styleClass="form-label" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Username:" styleClass="form-label" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="usernameField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Name:" styleClass="form-label" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <TextField fx:id="nameField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="Firstname:" styleClass="form-label" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <TextField fx:id="firstnameField" GridPane.rowIndex="4" GridPane.columnIndex="1" />

        <Label text="Date of Birth:" styleClass="form-label" GridPane.rowIndex="5" GridPane.columnIndex="0" />
        <DatePicker fx:id="dateOBPicker" GridPane.rowIndex="5" GridPane.columnIndex="1" />

        <Label text="Gender:" styleClass="form-label" GridPane.rowIndex="6" GridPane.columnIndex="0" />
        <ComboBox fx:id="genderComboBox" GridPane.rowIndex="6" GridPane.columnIndex="1" />

        <Label text="Role:" styleClass="form-label" GridPane.rowIndex="7" GridPane.columnIndex="0" />
        <ComboBox fx:id="roleComboBox" GridPane.rowIndex="7" GridPane.columnIndex="1" />

        <Label text="Interests:" styleClass="form-label" GridPane.rowIndex="8" GridPane.columnIndex="0" />
        <ListView fx:id="interestsListView" GridPane.rowIndex="8" GridPane.columnIndex="1"
                  style="-fx-pref-height: 150px;"/>
    </GridPane>

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Cancel" styleClass="button" fx:id="cancelButton" onAction="#handleCancel" />
        <Button text="Save" styleClass="button button-success" fx:id="saveButton" onAction="#handleSave" />
    </HBox>
</VBox>